<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomActionBarTheme"
        parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/MyActionBar</item>
    </style>

    <style name="LoginAndSignUpTheme"
        parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/LoginAndSignUpActionBar</item>
    </style>

    <!-- ActionBar styles -->
    <style name="MyActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/action_bar_background</item>
        <item name="android:icon">@drawable/ic_drawer</item>
    </style>

    <style name="LoginAndSignUpActionBar"
        parent="@android:style/Widget.Holo.Light.ActionBar">
        <item name="android:background">@color/action_bar_background</item>
        <item name="android:icon">@mipmap/ic_launcher</item>
    </style>
</resources>